<launch>
    <arg name="robot_type" value="$(env ROBOT_TYPE)" doc="robot_type [X1,X3,X3plus,R2,X7]"/>
    <!-- Arguments -->
    <arg name="move_forward_only" default="false"/>
    <arg name="namespace" default="tb3_1"/>
    <arg name="max_vel_x" default="0.6"/>
    <arg name="min_vel_x" default="-0.6"/>
    <arg name="max_vel_y" default="0.3"/>
    <arg name="min_vel_y" default="-0.3"/>
    <arg name="max_rot_vel" default="5.0"/>
    <arg name="min_rot_vel" default="5.0"/>
    <arg name="max_vel_trans" default="1.0"/>
    <arg name="min_vel_trans" default="0.01"/>
    <arg name="max_vel_theta" default="2.0"/>
    <arg name="min_vel_theta" default="0.1"/>
    <arg name="latch_xy_goal_tolerance" default="false"/>
    <arg name="yaw_goal_tolerance" default="0.1"/>
    <arg name="xy_goal_tolerance" default="0.1"/>


    <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
        <rosparam file="$(find yahboomcar_nav)/param/common/global_costmap_params_$(arg namespace).yaml" command="load"/>
        <rosparam file="$(find yahboomcar_nav)/param/common/local_costmap_params_$(arg namespace).yaml" command="load"/>
        <rosparam file="$(find yahboomcar_nav)/param/common/move_base_params.yaml" command="load"/>
        <rosparam file="$(find yahboomcar_nav)/param/common/costmap_common_params_$(arg robot_type)_$(arg namespace).yaml" command="load"
            ns="global_costmap"/>
        <rosparam file="$(find yahboomcar_nav)/param/common/costmap_common_params_$(arg robot_type)_$(arg namespace).yaml" command="load"
            ns="local_costmap"/>
        <rosparam file="$(find yahboomcar_nav)/param/common/dwa_local_planner_params_$(arg robot_type).yaml" command="load"/>
        <param name="base_local_planner" type="string" value="dwa_local_planner/DWAPlannerROS" if="$(eval arg('robot_type') == 'X3')"/>
        <!-- <param name="base_local_planner" type="string" value="teb_local_planner/TebLocalPlannerROS"/>-->
        <param name="DWAPlannerROS/max_vel_x" value="$(arg max_vel_x)"/>
        <param name="DWAPlannerROS/min_vel_x" value="$(arg min_vel_x)"/>
        <param name="DWAPlannerROS/max_vel_y" value="$(arg max_vel_y)"/>
        <param name="DWAPlannerROS/min_vel_y" value="$(arg min_vel_y)"/>

        <param name="DWAPlannerROS/max_rot_vel" value="$(arg max_rot_vel)"/>
        <param name="DWAPlannerROS/min_rot_vel" value="$(arg min_rot_vel)"/>
        <param name="DWAPlannerROS/max_vel_trans" value="$(arg max_vel_trans)"/>
        <param name="DWAPlannerROS/min_vel_trans" value="$(arg min_vel_trans)"/>
        <param name="DWAPlannerROS/max_vel_theta" value="$(arg max_vel_theta)"/>
        <param name="DWAPlannerROS/min_vel_theta" value="$(arg min_vel_theta)"/>
        <param name="DWAPlannerROS/latch_xy_goal_tolerance" value="$(arg latch_xy_goal_tolerance)"/>
        <param name="DWAPlannerROS/yaw_goal_tolerance" value="$(arg yaw_goal_tolerance)"/>
        <param name="DWAPlannerROS/xy_goal_tolerance" value="$(arg xy_goal_tolerance)"/>

        <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)"/>

        <remap from="cmd_vel" to="cmd_vel"/>
        <remap from="odom" to="odom"/>
    </node>
</launch>
